# Billing Pages Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://billing-pages.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_MAIN=billing_pages_main
DB_COMPANIES=billing_pages_companies
DB_TOURS=billing_pages_tours
DB_WORK=billing_pages_work
DB_TASKS=billing_pages_tasks
DB_MONEY=billing_pages_money
DB_USERNAME=billing_user
DB_PASSWORD=your_secure_password_here

# Email Configuration
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@billing-pages.com
MAIL_FROM_NAME=Billing Pages

# Logging
LOG_LEVEL=info

# Maps API (optional)
MAPS_API_KEY=your_google_maps_api_key_here

# Security Settings
SESSION_SECRET=your_session_secret_here
CSRF_SECRET=your_csrf_secret_here

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=["pdf","png","jpg","jpeg","gif","csv","gpx"]

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/www/vhosts/billing-pages.com/backups 